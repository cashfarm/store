{
  "extends": "../config/tsconfig.flexible", // also available: "./config/tsconfig.strict"
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "outDir": "compiled",
    "rootDir": ".",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "inlineSourceMap": false,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "lib" : [
      "es6"
    ],
    "types" : [
      "node",
      "mocha"
    ],
    "baseUrl": ".", // required for paths
    "paths": {
      "@cashfarm/store": ["../lib"], // write tests without relative paths
      "@cashfarm/store/mysql": ["../lib/mysql"],
      "@cashfarm/store/symbols": ["../lib/symbols"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../src",
    "../node_modules/**",
    "./compiled/**"
  ]
}
