{
  // TS LINT
  "tslint.configFile": "tslint.json",
  "tslint.enable": true,
  "tslint.run": "onType",
  "tslint.exclude": [
    "node_modules/**/*",
    "tests/**/*"
  ],
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "lib/": true
  },
  "files.insertFinalNewline": true
}